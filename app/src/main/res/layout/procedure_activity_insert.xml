<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities_tharindu.ProcedureInsertActivity">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_form_shape"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.238">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:padding="15dp"
            android:text="Add New procedure"
            android:textColor="@color/colour1"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/etProcedureName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="@string/name" />

        <EditText
            android:id="@+id/etProcedureMedCenter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:ems="10"
            android:hint="@string/med_center"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etProcedureUpperPriceRange"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:ems="10"
            android:hint="Upper Price Range"
            android:maxLength="10"
            android:inputType="phone" />

        <EditText
            android:id="@+id/etProcedureLowerPriceRange"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:ems="10"
            android:hint="Lower Price Range"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/medType"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spnProcedureMedType"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"
            android:entries="@array/medicinetype"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/btnSubmitProcedureEntry"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_margin="16dp"
            android:backgroundTint="@color/colour1"
            android:text="Submit Entry"
            android:textSize="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>