<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="28dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="19dp"
    tools:context=".activities.ProcedureListItemActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="9dp"
        >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="120dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvProNameItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:paddingStart="3dp"
                android:text="Procedure Name"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="153dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/tvProMedCenterItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="ProMedCenter"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="147dp"
                tools:layout_editor_absoluteY="82dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnUpdateProcedureRecord"
            android:layout_width="130dp"
            android:layout_height="59dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/edit_button_shape"
            android:drawableTop="@drawable/edit_record"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <Button
            android:id="@+id/btnDeleteProcedureRecord"
            android:layout_width="130dp"
            android:layout_height="59dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/delete_button_shape"
            android:drawableTop="@drawable/delete_record"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/docTelephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="147dp">

                <TextView
                    android:id="@+id/tvProUpperRangeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:layout_marginLeft="1dp"
                    android:text="@string/u_range"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="147dp" />

                <TextView
                    android:id="@+id/tvProUpperRangeItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:text="xxxxx"
                    android:layout_marginStart="35dp"
                    tools:layout_editor_absoluteX="104dp"
                    tools:layout_editor_absoluteY="147dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="48dp"
                tools:layout_editor_absoluteY="184dp">

                <TextView
                    android:id="@+id/tvDocEmailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:text="@string/l_range"
                    tools:layout_editor_absoluteX="48dp"
                    tools:layout_editor_absoluteY="184dp" />

                <TextView
                    android:id="@+id/tvProLowerRangeItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:text="xxxxx"
                    android:layout_marginStart="35dp"
                    tools:layout_editor_absoluteX="90dp"
                    tools:layout_editor_absoluteY="184dp" />
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>